{
  "status": 0,
  "msg": "",
  "data": {
    "type": "page",
    "title": " ",
    "name": "product",
    "toolbar": [],
    "body": [
      {
        "type": "crud",
        "name": "product-pvip",
        "parsePrimitiveQuery": {
          "enable": true,
          "types": [
            "boolean",
            "number"
          ]
        },
        "syncLocation": false,
        "filterTogglable": {
          "label": "更多搜索",
          "activeLabel": "收起搜索",
          "icon": "fa fa-arrow-down mr-1",
          "activeIcon": "fa fa-arrow-up mr-1"
        },
        "headerToolbar": [
          "filter-toggler"
        ],
        "filter": {
          "title": "条件搜索",
          "body": [
            {
              "type": "list-select",
              "name": "direction",
              "label": "方向",
              "clearable": true,
              "value": 3,
              "options":[
                {
                  "label": "后端/架构",
                  "value": 3
                },
                {
                  "label": "前端/移动",
                  "value": 5
                },
                {
                  "label": "计算机基础",
                  "value": 9
                },
                {
                  "label": "AI/大数据",
                  "value": 8
                },
                {
                  "label": "运维/测试",
                  "value": 6
                },
                {
                  "label": "产品/运营",
                  "value": 7
                },
                {
                  "label": "管理/成长",
                  "value": 4
                }
              ],
              "onEvent": {
                "change": {
                  "actions": [
                    {
                      "actionType": "setValue",
                      "componentId": "pvip-tag",
                      "args": {
                        "msg": "${event.data.value}"
                      }
                    }
                  ]
                }
              }
            },
            {
              "type": "list-select",
              "id": "pvip-tag",
              "name": "tag",
              "label": "分类",
              "clearable": true,
              "value": 3,
              "options":[
                {
                  "label": "全部",
                  "value": 3
                },
                {
                  "label": "Java",
                  "value": 10
                },
                {
                  "label": "Go",
                  "value": 11
                },
                {
                  "label": "Python",
                  "value": 12
                },
                {
                  "label": ".Net",
                  "value": 65
                },
                {
                  "label": "C语言",
                  "value": 64
                },
                {
                  "label": "基本功",
                  "value": 22
                },
                {
                  "label": "分布式",
                  "value": 20
                },
                {
                  "label": "中间件",
                  "value": 17
                },
                {
                  "label": "区块链",
                  "value": 23
                },
                {
                  "label": "全栈",
                  "value": 21
                },
                {
                  "label": "C++",
                  "value": 61
                },
                {
                  "label": "中台",
                  "value": 19
                },
                {
                  "label": "DDD",
                  "value": 18
                },
                {
                  "label": "案例",
                  "value": 16
                },
                {
                  "label": "微服务",
                  "value": 14
                },
                {
                  "label": "数据库",
                  "value": 13
                },
                {
                  "label": "Rust",
                  "value": 98
                }
              ],
              "visibleOn": "${ direction == 3 }"
            },
            {
              "type": "list-select",
              "id": "pvip-tag",
              "name": "tag",
              "label": "分类",
              "clearable": true,
              "value": 5,
              "options": [
                {
                  "label": "全部",
                  "value": 5
                },
                {
                  "label": "JavaScript",
                  "value": 30
                },
                {
                  "label": "iOS",
                  "value": 34
                },
                {
                  "label": "Android",
                  "value": 33
                },
                {
                  "label": "Node.js",
                  "value": 41
                },
                {
                  "label": "网络",
                  "value": 40
                },
                {
                  "label": "webpack",
                  "value": 39
                },
                {
                  "label": "音视频",
                  "value": 38
                },
                {
                  "label": "浏览器",
                  "value": 37
                },
                {
                  "label": "Swift",
                  "value": 36
                },
                {
                  "label": "Kotlin",
                  "value": 35
                },
                {
                  "label": "框架",
                  "value": 32
                },
                {
                  "label": "TypeScript",
                  "value": 31
                },
                {
                  "label": "可视化",
                  "value": 70
                }
              ],
              "visibleOn": "${ direction == 5 }"
            },
            {
              "type": "list-select",
              "name": "tag",
              "id": "pvip-tag",
              "label": "分类",
              "clearable": true,
              "value": 9,
              "options":[
                {
                  "label": "全部",
                  "value": 9
                }
              ],
              "visibleOn": "${ direction == 9 }"
            },
            {
              "type": "list-select",
              "name": "tag",
              "id": "pvip-tag",
              "label": "分类",
              "clearable": true,
              "value": 8,
              "options":[
                {
                  "label": "全部",
                  "value": 8
                }
              ],
              "visibleOn": "${ direction == 8 }"
            },
            {
              "type": "list-select",
              "name": "tag",
              "id": "pvip-tag",
              "label": "分类",
              "clearable": true,
              "value": 6,
              "options":[
                {
                  "label": "全部",
                  "value": 6
                }
              ],
              "visibleOn": "${ direction == 6 }"
            },
            {
              "type": "list-select",
              "name": "tag",
              "id": "pvip-tag",
              "label": "分类",
              "clearable": true,
              "value": 7,
              "options":[
                {
                  "label": "全部",
                  "value": 7
                }
              ],
              "visibleOn": "${ direction == 7 }"
            },
            {
              "type": "list-select",
              "name": "tag",
              "id": "pvip-tag",
              "label": "分类",
              "clearable": true,
              "value": 4,
              "options":[
                {
                  "label": "全部",
                  "value": 4
                }
              ],
              "visibleOn": "${ direction == 4 }"
            },
            {
              "type": "group",
              "body": [
                {
                  "type": "list-select",
                  "clearable": true,
                  "label": "最新/热度",
                  "name": "sort",
                  "value": 8,
                  "options": [
                    {
                      "label": "综合",
                      "value": 8
                    },
                    {
                      "label": "最新",
                      "value": 1
                    },
                    {
                      "label": "最热",
                      "value": 4
                    }
                  ]
                },
                {
                  "type": "select",
                  "label": "课程类型",
                  "name": "product_type",
                  "value": 0,
                  "options": [
                    {
                      "label": "全部类型",
                      "value": 0
                    },
                    {
                      "label": "体系课",
                      "value": 1
                    },
                    {
                      "label": "公开课",
                      "value": 4
                    },
                    {
                      "label": "线下大会",
                      "value": 5
                    },
                    {
                      "label": "严选课",
                      "value": 6
                    }
                  ]
                },
                {
                  "type": "select",
                  "label": "课程形式",
                  "name": "product_form",
                  "value": 0,
                  "options": [
                    {
                      "label": "全部形式",
                      "value": 0
                    },
                    {
                      "label": "图文+音频",
                      "value": 1
                    },
                    {
                      "label": "视频",
                      "value": 2
                    }
                  ]
                },
                {
                  "type": "hidden",
                  "name": "with_articles",
                  "value": true
                }
              ]
            }
          ],
          "actions": [
            {
              "type": "reset",
              "label": "重置"
            },
            {
              "type": "submit",
              "level": "primary",
              "label": "搜索"
            }
          ]
        },
        "api": {
          "method": "get",
          "url": "/v2/product/pvip/list"
        },
        "autoFillHeight": false,
        "defaultParams": {
          "perPage": 20
        },
        "keepItemSelectionOnPageChange": true,
        "bulkActions": [],
        "footerToolbar": [
          "statistics",
          "switch-per-page",
          "pagination"
        ],
        "mode": "cards",
        "columnsCount": 4,
        "card": {
          "header": {
            "className": "word-break",
            "title": "$title",
            "subTitle": "$subtitle",
            "description": "",
            "avatar": "${cover.square | raw}",
            "avatarClassName": "pull-left thumb-md avatar b-3x m-r"
          },
          "body": [
            {
              "type": "property",
              "title": "",
              "mode": "simple",
              "separator": "：",
              "items": [
                {
                  "label": "ID",
                  "content": "${id}"
                },
                {
                  "label": "课程数",
                  "content": "${article.count} 讲",
                  "span": 2
                },
                {
                  "label": "类型",
                  "content": "${ is_audio === true ? '音频': '视频'}",
                  "visibleOn": "${ is_audio !== undefined }"
                },
                {
                  "label": "类型",
                  "content": "${ is_video === true ? '视频': '音频'}",
                  "visibleOn": "${ is_video !== undefined }"
                },
                {
                  "label": "完结",
                  "content": "${ is_finish === true ? '是': '否'}",
                  "span": 2
                },
                {
                  "label": "价格",
                  "content": "免费",
                  "span": 2,
                  "visibleOn": "${ sale_type === 6 ||  sale_type === 7 }"
                },
                {
                  "label": "价格",
                  "content": "¥${ROUND(sale/100,2)}",
                  "span": 2,
                  "visibleOn": "${ sale_type !== 6 &&  sale_type !== 7 }"
                },
                {
                  "label": "作者",
                  "content": "${author.name}"
                },
                {
                  "label": "作者简介",
                  "content": "${author.intro}",
                  "span": 3
                }
              ]
            }
          ],
          "actions": [
              {
                "type": "button",
                "icon": "fa fa-eye",
                "label": "详情",
                "level": "light",
                "loading": true,
                "actionType": "drawer",
                "drawer": {
                  "resizable": true,
                  "closeOnOutside": true,
                  "size": "xl",
                  "title": "课程详情",
                  "actions": [],
                  "body": [
                    {
                      "type": "card",
                      "header": {
                        "className": "word-break",
                        "title": "$title",
                        "subTitle": "$subtitle",
                        "description": "共 ${article.count} 讲",
                        "avatar": "${cover.square | raw}",
                        "avatarClassName": "pull-left thumb-md avatar b-3x m-r"
                      },
                      "body": []
                    },
                    {
                      "type": "html",
                      "wrapperComponent": "pre",
                      "name": "intro_html",
                      "label": "课程介绍"
                    },
                    {
                      "type": "crud",
                      "name": "articles-list",
                      "parsePrimitiveQuery": {
                        "enable": true,
                        "types": [
                          "boolean",
                          "number"
                        ]
                      },
                      "syncLocation": false,
                      "filter": {
                        "title": "",
                        "body": [
                          {
                            "type": "group",
                            "body": [
                              {
                                "type": "hidden",
                                "name": "cid",
                                "value": "${id}"
                              },
                              {
                                "type": "hidden",
                                "name": "order",
                                "value": "earliest"
                              },
                              {
                                "type": "hidden",
                                "name": "sample",
                                "value": false
                              }
                            ]
                          }
                        ],
                        "actions": []
                      },
                      "api": {
                        "method": "get",
                        "url": "/v2/product/articles"
                      },
                      "perPage": 200,
                      "mode": "cards",
                      "columnsCount": 4,
                      "checkOnItemClick": true,
                      "card": {
                        "header": {
                          "className": "word-break",
                          "title": "",
                          "subTitle":  "",
                          "description": "$article_title",
                          "avatar": "${article_cover | raw}",
                          "avatarClassName": "pull-left thumb-md avatar b-3x m-r"
                        },
                        "body": [
                          {
                            "type": "tpl",
                            "label": "",
                            "className": "word-break",
                            "tpl": "$article_summary"
                          },
                          {
                            "type": "property",
                            "title": "",
                            "mode": "simple",
                            "separator": "：",
                            "items": [
                              {
                                "label": "ID",
                                "content": "${id}"
                              },
                              {
                                "label": "视频大小",
                                "content": "${ FLOOR(video_size/1048576, 2) } M",
                                "visibleOn": "${ video_size !== undefined }"
                              },
                              {
                                "label": "音频大小",
                                "content": "${ FLOOR(audio_size/1048576, 2) } M",
                                "visibleOn": "${ audio_size !== undefined }"
                              }
                            ]
                          }
                        ],
                        "actions": [
                          {
                            "type": "button",
                            "icon": "fa fa-eye",
                            "label": "详情",
                            "level": "light",
                            "actionType": "drawer",
                            "loading": true,
                            "drawer": {
                              "resizable": true,
                              "closeOnOutside": true,
                              "actions": [],
                              "size": "xl",
                              "title": "课程详情",
                              "body": [
                                {
                                  "type": "service",
                                  "api": {
                                    "method": "get",
                                    "url": "/v2/product/article/info?id=${id}"
                                  },
                                  "body": [
                                    {
                                      "type": "property",
                                      "title": "${title}",
                                      "mode": "simple",
                                      "separator": "：",
                                      "items": [
                                        {
                                          "label": "ID",
                                          "content": "${id}"
                                        },
                                        {
                                          "label": "视频大小",
                                          "content": "${ FLOOR(video_size/1048576, 2) } M",
                                          "visibleOn": "${ video_size !== undefined }"
                                        },
                                        {
                                          "label": "音频大小",
                                          "content": "${ FLOOR(audio_size/1048576, 2) } M",
                                          "visibleOn": "${ audio_size !== undefined }"
                                        }
                                      ]
                                    },
                                    {
                                      "type": "video",
                                      "muted": true,
                                      "autoPlay": false,
                                      "rates": [1.0, 1.5, 2.0],
                                      "src": "${video.hls_medias|last|pick:url}",
                                      "poster": "${video.cover}",
                                      "visibleOn": "${ video.hls_medias !== undefined }"
                                    },
                                    {
                                      "type": "video",
                                      "muted": true,
                                      "autoPlay": false,
                                      "rates": [1.0, 1.5, 2.0],
                                      "src": "${video_preview.medias|last|pick:url}",
                                      "poster": "${video.cover}",
                                      "visibleOn": "${ video.hls_medias === undefined && video_preview.medias !== undefined }"
                                    },
                                    {
                                      "type": "audio",
                                      "autoPlay": false,
                                      "rates": [1.0, 1.5, 2.0],
                                      "src": "${audio.download_url}",
                                      "visibleOn": "${ audio.download_url !== undefined }"
                                    },
                                    {
                                      "type": "divider"
                                    },
                                    {
                                      "type": "html",
                                      "className": "word-break",
                                      "name": "content",
                                      "label": "附件"
                                    }
                                  ]
                                }
                              ]
                            }
                          },
                          {
                            "type": "button",
                            "loading": true,
                            "label": "下载",
                            "level": "info",
                            "icon": "fa fa-download",
                            "actionType": "ajax",
                            "api": {
                              "url": "/v2/product/download",
                              "method":"post",
                              "data": {
                                "pid": "${cid}",
                                "ids": "${id | trim}"
                              }
                            },
                            "confirmText": "下载 [${share.title}] 会提交异步下载任务，\n 请在[任务管理]查看下载情况"
                          }
                        ]
                      },
                      "keepItemSelectionOnPageChange": false,
                      "bulkActions": [
                        {
                          "label": "批量下载",
                          "loading": true,
                          "level": "info",
                          "actionType": "ajax",
                          "api": {
                            "url": "/v2/product/download",
                            "method":"post",
                            "data": {
                              "pid": "${cid}",
                              "ids": "${ids|raw}"
                            }
                          },
                          "confirmText": "下载 [${share.title}]会提交异步下载任务，\n 请在[任务管理]查看下载情况"
                        }
                      ],
                      "headerToolbar": [
                        "filter-toggler",
                        "bulkActions",
                        {
                          "type": "tpl",
                          "tpl": "当前有 ${count} 条数据。",
                          "className": "v-middle"
                        },
                        "pagination",
                        "switch-per-page"
                      ],
                      "footerToolbar": [
                        "statistics",
                        "switch-per-page",
                        "pagination"
                      ],
                      "affixHeader": true,
                      "columnsTogglable": "auto",
                      "placeholder": "暂无数据",
                      "tableClassName": "table-db table-striped",
                      "headerClassName": "crud-table-header",
                      "footerClassName": "crud-table-footer",
                      "toolbarClassName": "crud-table-toolbar",
                      "combineNum": 0,
                      "bodyClassName": "panel-default"
                    }
                  ]
                }
              },
              {
                "type": "button",
                "loading": true,
                "label": "下载",
                "level": "info",
                "icon": "fa fa-download",
                "actionType": "ajax",
                "confirmText": "下载 [${share.title}] 会提交异步下载任务，\n 请在 [任务管理] 查看下载情况",
                "api": {
                  "url": "/v2/product/download",
                  "method":"post",
                  "data": {
                    "pid": "${id}"
                  }
                }
              }
            ]
        },
        "affixHeader": true,
        "columnsTogglable": "auto",
        "placeholder": "暂无数据",
        "tableClassName": "table-db table-striped",
        "headerClassName": "crud-table-header",
        "footerClassName": "crud-table-footer",
        "toolbarClassName": "crud-table-toolbar",
        "combineNum": 0,
        "bodyClassName": "panel-default"
      }
    ]
  }
}
